! Namelist for the SOSAA initiation

&NML_MAIN
  WORK_DIR = '..',
  CODE_DIR = '../sosaa_hyy',
  CASE_DIR = '../cases',
  CHEM_DIR = '../chemistry_chemdep',
  INPUT_DIR = '../sosa_in',
  STATION = 'HYY'
/

&NML_FLAG
  Emiflag  = 2,            ! 1 = old megan code, 2 = new megan code, 3 = SIMBIM, 0 = clear cut
  Chemflag = 1,            ! 1 = Chemistry included
  Gasdrydepflag = 1,       ! 1 = Gas dry deposition included
  Aeroflag = 0,            ! 1 = aerosol dynamics included
  Soilflag = 1,            ! 1 = measured soil VOC emission included (do not use this at the moment, 
                           ! cause it needs to be updated). 2 = include soil VOC parameterisation from Hermanni
  ECMWFflag2 = 1,          ! 1 = second approach to deal with data from ECMWF reanalysis (Luxi)
  Treeflag = 1,            ! 1 = pine, 2 = spruce, 3 = birch. BIOMASS: remember to change this for different tree ages! 4 = clear cut
  chooseuhma = 0          ! 1 = new_uhma, with molecular specific vapour properties. 2 = old uhma
  Synflag = 0              ! 1 = assume monoterpene emission is purely by de novo. Otherwise it is assumed it is purely by pool
/

&NML_GRID
  kz = 51
/

&NML_TIME
  start_date = 2010, 8,  1,  0,  0,  0 ,
  end_date   = 2010, 8,  1,  2,  0,  0 ,
  dt_obs = 1800.0d0,  ! Time step for observation data
  dt_mete = 10.0d0,   ! Time step for Scadis
  dt_chem = 60.0d0,   ! Time step for Kpp
  dt_aero = 60.0d0,   ! aerosol simulation time
  dt_uhma = 10.0d0    ! timestep iterating in UHMA
/
